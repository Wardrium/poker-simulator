    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist"
    },
    "include": [
        "src/**/*", "spec/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
